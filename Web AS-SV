    <script>
        // FUNCIONES B√ÅSICAS DE NAVEGACI√ìN
        function showScreen(screenId) {
            // Ocultar todas las pantallas
            document.getElementById('main-screen').style.display = 'none';
            document.getElementById('water-screen').style.display = 'none';
            document.getElementById('contact-screen').style.display = 'none';
            document.getElementById('confirmation-screen').style.display = 'none';
            
            // Mostrar la pantalla solicitada
            document.getElementById(screenId).style.display = 'block';
            
            // Scroll al inicio de la p√°gina
            window.scrollTo(0, 0);
        }
        
        function playAudioInstructions() {
            // En una implementaci√≥n real, aqu√≠ ir√≠a el c√≥digo para reproducir audio
            alert("Instrucciones de audio: Esta aplicaci√≥n le permite reportar problemas de agua y alimentos. Use los botones grandes para navegar. Puede grabar un mensaje de voz si no puede escribir.");
        }
        
        function recordAudio() {
            // En una implementaci√≥n real, aqu√≠ ir√≠a el c√≥digo para grabar audio
            alert("Funci√≥n de grabaci√≥n de audio activada. Hable claramente despu√©s del tono.");
        }
        
        function submitWaterReport() {
            // Validar formulario b√°sico
            const municipio = document.getElementById('municipio').value;
            const problema = document.querySelector('input[name="problema"]:checked');
            
            if (!municipio) {
                alert("Por favor, seleccione su municipio.");
                return;
            }
            
            if (!problema) {
                alert("Por favor, seleccione el tipo de problema.");
                return;
            }
            
            // En una implementaci√≥n real, aqu√≠ se enviar√≠an los datos al servidor
            // Por ahora, solo mostramos la pantalla de confirmaci√≥n
            showScreen('confirmation-screen');
        }
        
        function showMunicipioPhone() {
            const select = document.getElementById('municipio-contacto');
            const phoneDisplay = document.getElementById('phone-display');
            const phoneCall = document.getElementById('phone-call');
            const phoneContainer = document.getElementById('municipio-phone');
            
            if (select.value) {
                const selectedOption = select.options[select.selectedIndex];
                const phoneNumber = selectedOption.text.split(' - ')[1];
                phoneDisplay.textContent = `Tel: ${phoneNumber}`;
                phoneCall.href = `tel:${phoneNumber.replace(/-/g, '')}`;
                phoneContainer.style.display = 'block';
            } else {
                phoneContainer.style.display = 'none';
            }
        }
        
        // Inicializar mostrando la pantalla principal
        window.onload = function() {
            showScreen('main-screen');
        };
    </script>
